<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/interfaceAlias"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Interface" />

        <CheckBox
            android:id="@+id/enableInterface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Interface" />

        <TextView
            android:id="@+id/descLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:visibility="gone" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:visibility="gone" />

        <TextView
            android:id="@+id/typeLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/macLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MAC address"
            android:visibility="gone" />

        <EditText
            android:id="@+id/macAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mtuLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MTU"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mtu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="If blank default MTU will be used"
            android:inputType="textNoSuggestions"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mssLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MSS"
            android:visibility="gone" />

        <EditText
            android:id="@+id/mss"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:visibility="gone" />

        <TextView
            android:id="@+id/speedLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Speed and Duplex"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/speed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Additional fields for a Static IP / DHCP conf -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6" >

            <TextView
                android:id="@+id/IpLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="IP address"
                android:visibility="gone" />

            <EditText
                android:id="@+id/Ip"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/Subnet"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Additional fields for a DDHCP conf -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/hostNameLabel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hostname"
                android:visibility="gone" />

            <EditText
                android:id="@+id/hostName"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Additional fields for the PPPoE conf -->

        <TextView
            android:id="@+id/serviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service name"
            android:visibility="gone" />

        <EditText
            android:id="@+id/service"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/resetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodic reset"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/resetSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Additional fields for the PPTP/L2TP conf -->

        <TextView
            android:id="@+id/localIpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local IP address"
            android:visibility="gone" />

        <EditText
            android:id="@+id/localIp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/localSubnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/remoteIpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remote IP address"
            android:visibility="gone" />

        <EditText
            android:id="@+id/remoteIp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP address"
            android:visibility="gone" />

        <EditText
            android:id="@+id/ip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/idleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idle timeout (seconds)"
            android:visibility="gone" />

        <EditText
            android:id="@+id/idle2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Generic fields -->

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:visibility="gone" />

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:visibility="gone" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:visibility="gone" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dial on demand"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/dial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable dial on demand mode"
            android:visibility="gone" />

        <TextView
            android:id="@+id/advancedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:visibility="gone" />

        <Button
            android:id="@+id/advancedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Advanced configuration options"
            android:visibility="gone" />

        <!-- Finally the checkboxs & save button at the bottom -->

        <CheckBox
            android:id="@+id/privateNetworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block private networks"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/bogonNetworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block bogon networks"
            android:visibility="gone" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Save" />
    </LinearLayout>

</ScrollView>